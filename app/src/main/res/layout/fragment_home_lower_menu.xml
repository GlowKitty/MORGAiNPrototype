<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="morgain.morgainprototype.HomeLowerMenu">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:text="Track your mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mood" />

            <Button
                android:id="@+id/view_mood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Mood" />

            <Button
                android:text="Music-mood match"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/music" />

            <Button
                android:id="@+id/first_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Do first run again" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
